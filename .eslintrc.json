{
  "extends": [
    "airbnb-base",
    "plugin:vue/recommended",
    "plugin:jest/recommended"
  ],
  "rules": {
    "vue/html-self-closing": [
      "error",
      {
        "html": {
          "component": "never"
        }
      }
    ]
  },
  "overrides": [
    {
      "files": ["templates/**"],
      "rules": {
        "import/no-unresolved": 0,
        "import/no-extraneous-dependencies": 0
      }
    }
  ]
}
